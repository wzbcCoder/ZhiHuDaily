<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/comment_image"
        android:layout_width="100px"
        android:layout_height="100px"
        android:layout_margin="30px"
        />

    <ImageView
        android:id="@+id/comment_likesimg"
        android:layout_width="30px"
        android:layout_height="30px"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/comment_username"
        android:layout_marginEnd="25dp"
        android:layout_marginRight="25dp"
        android:src="@drawable/like2" />

    <TextView
        android:id="@+id/comment_likes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/comment_username"
        android:layout_alignBottom="@+id/comment_username"
        android:layout_alignLeft="@+id/comment_likesimg"
        android:layout_alignStart="@+id/comment_likesimg"
        android:layout_marginLeft="19dp"
        android:layout_marginStart="19dp"
        android:text="点赞数" />
    <TextView
        android:id="@+id/comment_username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/comment_image"
        android:layout_toRightOf="@id/comment_image"
        android:textStyle="bold"
        android:text="我是用户名" />
    <TextView
        android:id="@+id/comment_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/comment_username"
        android:layout_toRightOf="@id/comment_image"
        android:layout_marginTop="20px"
        android:layout_marginRight="30px"
        android:text="我是评论内容"/>
    <TextView
        android:id="@+id/comment_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/comment_image"
        android:layout_below="@id/comment_content"
        android:layout_marginTop="20px"
        android:text="我是时间"/>

</RelativeLayout>